year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite iNEXT.scaling in publications use:")

citEntry(
		 entry = 'manual',
		 title = paste('iNEXT.scaling:', meta$Title),
		 author = personList(as.person("Kai-Hsiang Hu"),
		                     as.person("Anne Chao")),
		 year = year,
		 note = note,
		 url = "https://sites.google.com/view/chao-lab-website/software",
		 textVersion = paste("Kai-Hsiang Hu and Anne Chao.", year, "iNEXT.scaling: Interpolation and Extrapolation for Inter-Specific Encounter.", note, "URL: https://sites.google.com/view/chao-lab-website/software")
)
